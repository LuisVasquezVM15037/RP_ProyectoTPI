{
    "name": "tienda-plantas/jardineria",
    "description": "Tienda en Línea de Plantas y Jardinería",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Controllers\\": "controllers/",
            "Models\\": "models/",
            "Config\\": "config/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "serve": "php -S localhost:8000 -t public/"
    },
    "config": {
        "optimize-autoloader": true
    }
}
